{
  "openapi": "3.0.0",
  "info": {
    "title": "个人网站API文档",
    "version": "1.0.0",
    "description": "个人网站的后端API接口文档"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "开发环境服务器"
    }
  ],
  "tags": [
    {
      "name": "文章管理",
      "description": "文章相关的API接口"
    },
    {
      "name": "随记管理",
      "description": "随记相关的API接口"
    },
    {
      "name": "相册管理",
      "description": "相册相关的API接口"
    },
    {
      "name": "留言管理",
      "description": "留言相关的API接口"
    },
    {
      "name": "用户管理",
      "description": "用户相关的API接口"
    }
  ],
  "paths": {
    "/articles": {
      "get": {
        "tags": ["文章管理"],
        "summary": "获取文章列表",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "页码",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "每页数量",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "tag",
            "in": "query",
            "description": "标签筛选",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取文章列表",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": {
                      "type": "integer",
                      "description": "总记录数"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "文章ID"
                          },
                          "title": {
                            "type": "string",
                            "description": "文章标题"
                          },
                          "description": {
                            "type": "string",
                            "description": "文章描述"
                          },
                          "tags": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            },
                            "description": "文章标签"
                          },
                          "updateTime": {
                            "type": "string",
                            "format": "date-time",
                            "description": "更新时间"
                          },
                          "likes": {
                            "type": "integer",
                            "description": "点赞数"
                          },
                          "views": {
                            "type": "integer",
                            "description": "浏览量"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["文章管理"],
        "summary": "创建新文章",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "文章标题"
                  },
                  "content": {
                    "type": "string",
                    "description": "文章内容"
                  },
                  "description": {
                    "type": "string",
                    "description": "文章描述"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "文章标签"
                  }
                },
                "required": ["title", "content"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "文章创建成功"
          }
        }
      }
    },
    "/articles/{id}": {
      "get": {
        "tags": ["文章管理"],
        "summary": "获取文章详情",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "文章ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功获取文章详情",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "文章ID"
                    },
                    "title": {
                      "type": "string",
                      "description": "文章标题"
                    },
                    "content": {
                      "type": "string",
                      "description": "文章内容"
                    },
                    "description": {
                      "type": "string",
                      "description": "文章描述"
                    },
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "description": "文章标签"
                    },
                    "updateTime": {
                      "type": "string",
                      "format": "date-time",
                      "description": "更新时间"
                    },
                    "likes": {
                      "type": "integer",
                      "description": "点赞数"
                    },
                    "views": {
                      "type": "integer",
                      "description": "浏览量"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/articles/{id}/like": {
      "post": {
        "tags": ["文章管理"],
        "summary": "点赞文章",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "文章ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "点赞成功"
          }
        }
      }
    },
